{
  "name": "YouTube Video Automation",
  "nodes": [
    {
      "parameters": {
        "cronExpression": "0 9 * * 1,3,5"
      },
      "name": "Schedule Shorts",
      "type": "n8n-nodes-base.cron",
      "typeVersion": 1,
      "position": [100, 100]
    },
    {
      "parameters": {
        "cronExpression": "0 9 * * 0"
      },
      "name": "Schedule Long Video",
      "type": "n8n-nodes-base.cron",
      "typeVersion": 1,
      "position": [100, 200]
    },
    {
      "parameters": {
        "prompt": "Generate a 30-second YouTube Shorts script about mobile accessories or cricket highlights.",
        "model": "gpt-3.5-turbo" // Placeholder; replace with your chosen AI model
      },
      "name": "Generate Script",
      "type": "n8n-nodes-base.ai",
      "typeVersion": 1,
      "position": [300, 100]
    },
    {
      "parameters": {
        "text": "{{$node['Generate Script'].json['script']}}",
        "output": "output.mp3"
      },
      "name": "Text-to-Speech",
      "type": "n8n-nodes-base.executeCommand",
      "typeVersion": 1,
      "position": [500, 100],
      "executeCommand": "ffmpeg -i input.wav -c:a mp3 output.mp3" // Placeholder
    },
    {
      "parameters": {
        "command": "ffmpeg -i input.mp4 -i output.mp3 -c:v copy -c:a aac -map 0:v:0 -map 1:a:0 final-video.mp4"
      },
      "name": "Combine Video and Audio",
      "type": "n8n-nodes-base.executeCommand",
      "typeVersion": 1,
      "position": [700, 100]
    }
  ],
  "connections": {
    "Schedule Shorts": {
      "main": [[{"node": "Generate Script", "type": "main", "index": 0}]]
    },
    "Schedule Long Video": {
      "main": [[{"node": "Generate Script", "type": "main", "index": 0}]]
    },
    "Generate Script": {
      "main": [[{"node": "Text-to-Speech", "type": "main", "index": 0}]]
    },
    "Text-to-Speech": {
      "main": [[{"node": "Combine Video and Audio", "type": "main", "index": 0}]]
    }
  }
}
